{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"declaration": true,
		"declarationMap": true,
		"rootDir": "src",
		"outDir": "dist",
		"strictNullChecks": true,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"noEmit": true
	},
	"exclude": [
		"dist/**/*",
		"node_modules"
	]
}
