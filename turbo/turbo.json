{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["JWT_SECRET", "DATABASE_URL", "DATABASE_URL_LOCAL", "NEXT_PUBLIC_FORTY_TWO_CLIENT_ID", "NEXT_PUBLIC_FORTY_TWO_CLIENT_SECRET"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
